<Window x:Class="AudioSwitcherWPF.AudioOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Height="Auto"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">
    <Border Background="#AA000000" CornerRadius="10" Padding="10" MinWidth="200" MaxWidth="400">
        <TextBlock Name="txtMessage" Foreground="White" FontSize="14" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   TextWrapping="Wrap"/>
    </Border>
</Window>