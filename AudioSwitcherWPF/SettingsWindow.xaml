<Window x:Class="AudioSwitcherWPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inställningar" Height="240" Width="360">
    <StackPanel Margin="10">
        <TextBlock Text="Enhet 1:" Margin="0,0,0,5"/>
        <ComboBox Name="comboBoxDevice1" Margin="0,0,0,10"/>

        <TextBlock Text="Enhet 2:" Margin="0,0,0,5"/>
        <ComboBox Name="comboBoxDevice2" Margin="0,0,0,10"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Name="btnRefresh" Content="Uppdatera" Click="btnRefresh_Click" Margin="0,0,10,0"/>
            <Button Name="btnSave" Content="Spara" Width="100" Click="btnSave_Click"/>
        </StackPanel>
    </StackPanel>
</Window>